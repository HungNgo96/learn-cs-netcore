@page "/user/register"
@model MyApp.Namespace.RegisterModel
@{
    ViewData["Title"] = "ĐĂNG KÝ";
}
<h2 class="display-4">@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <h4>Điền thông tin tạo tài khoản mới</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.registerUserModel.UserName"></label>
                <input asp-for="@Model.registerUserModel.UserName" class="form-control" />
                <span asp-validation-for="@Model.registerUserModel.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.registerUserModel.Email"></label>
                <input asp-for="@Model.registerUserModel.Email" class="form-control" />
                <span asp-validation-for="@Model.registerUserModel.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.registerUserModel.Password"></label>
                <input asp-for="@Model.registerUserModel.Password" class="form-control" />
                <span asp-validation-for="@Model.registerUserModel.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.registerUserModel.ConfirmPassword"></label>
                <input asp-for="@Model.registerUserModel.ConfirmPassword" class="form-control" />
                <span asp-validation-for="@Model.registerUserModel.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-danger">Đăng ký</button>
        </form>
        <p>Nếu đã có tài khoản thì 
            <a asp-page="SignIn">Đăng nhập</a>
        </p>
    </div>
</div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
